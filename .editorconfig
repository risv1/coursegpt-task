# EditorConfig helps maintain consistent coding styles across different editors
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js,tsx,jsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.md]
trim_trailing_whitespace = false
